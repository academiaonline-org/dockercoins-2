ARG                                                                            \
  digest="@sha256:5beb4823c653c428379bc8b811ef233b7171806e8b10bb6879e7af1ed5bb4093"
ARG                                                                            \
  image="python"
ARG                                                                            \
  tag="3.9.1-alpine3.13"
################################################################################
FROM                                                                           \
  ${image}:${tag}${digest}                                                     \
  AS                                                                           \
  production
################################################################################
ARG                                                                            \
  dir=/app
ARG                                                                            \
  src=rng.py
################################################################################
RUN                                                                            \
  pip install Flask                                                            \
                                                                               ;
WORKDIR                                                                        \
  ${dir}
COPY                                                                           \
  ${src}                                                                       \
  script
################################################################################
ENTRYPOINT                                                                     \
  ["python"]
CMD                                                                            \
  ["script"]
################################################################################
EXPOSE                                                                         \
  8080
################################################################################
